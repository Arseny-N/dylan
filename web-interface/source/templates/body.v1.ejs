<body>
	<!-- Navbar -->
	<div class="row">
	<div class="col-sm-12"  >	
	
		<nav class="navbar navbar-inverse" role="navigation" id="navbar">  		
      				<ul class="nav navbar-nav">
        				<li class="divider-vertical" ><a href="#/editor">Script Editor</a></li>		
					<li class="divider-vertical"><a href="#/help">Help</a></li>				       
   				</ul> 
		</nav>
	
	</div>
	</div>
	<div id="file-hidden-input">
		<input type="file" id="opened-documents" name="documents[]" class="hidden"/>
	</div>


	<section id="editor" >


	
	<div class="row">
	<div class="col-sm-6"  >	
		
		<!-- Editor Toolbar -->
		<div class="row">
		<div class="col-sm-12"  >
		
			<div class="btn-group btn-group-justified" id="editor-toolbar">
		  	

				<div class="btn-group">
    					<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
					    <span class="glyphicon glyphicon-file"></span> File <span class="caret"></span>
   					</button>   				
    					<ul class="dropdown-menu" role="menu">

						<li class="dropdown-header">Open file</li>
						<li><a id="add-disk-script">Script</a></li>
						<li><a id="add-disk-text">Text</a></li>
						<li><a id="add-disk-binary">Binary (Read-Only)</a></li>
						
    						<li class="divider"></li>
    						<li><a id="download"><span class="glyphicon glyphicon-floppy-save"></span> Download </a> </li>
    						<li><a id="save"><span class="glyphicon glyphicon-floppy-save"></span> Save locally </a> </li>
						<li><a id="copy-to-clbd"><span class="glyphicon glyphicon-share"></span> To clipboard</a> </li>
						<li><a id="close-doc"><span class="glyphicon glyphicon-ban-circle"></span> Close</a>   </li>
						<li class="divider"></li>
						<li><a id="rename-doc"><span class="glyphicon glyphicon-ban-circle"></span> Rename</a>  </li>
					
						<li class="divider"></li>
						<li><a  id="add-doc-empty"><span class="glyphicon glyphicon-star"></span> Create new</a></li>
						
						
					</ul>
				</div>
											
  				<a class="btn btn-default" id="run-doc">
  					<span class="glyphicon glyphicon-play"></span> Run
  				</a>
  			</div>
  		</div>
  		</div>
  		
  		<br>
  		
		<!-- Editor/Console  -->
		<div class="row">
		<div class="col-sm-12"  >

	  		
			<div id="script-editor">
				<!-- Editor Tabs -->  		
				<ul class="nav nav-tabs" role="tablist" id="editor-tabs" >
		  
				</ul>
				<div id="codemirror"></div>		
			</div>					
		</div>
  		</div>
			
  		
	</div>
	
	<br class="hidden-lg hidden-md hidden-sm">
	
	<div class="col-sm-6" >	
			<!-- Logger Toolbar -->
			<div class="row">
			<div class="col-sm-7"  >
				<div class="btn-group btn-group-justified" id="logger-toolbar">
					<a class="btn btn-default" id="copy-to-clbd"><span class="glyphicon glyphicon-share"></span> To clipboard</a>
  					<a class="btn btn-default" id="clear"><span class="glyphicon glyphicon-ban-circle"></span> Clear</a>
		 		</div>
		 	</div>
		 	<div class="col-sm-5"  >
		 		<br class="hidden-lg hidden-md hidden-sm">
		 			
		 		<div id="logger-regexp" class="form-dark">		
					<input type="text" class="form-control"  placeholder="Enter here an emitter filter regexp.">
				</div>
		 	</div>
	  		</div>
	  		<br>



	  		
			<!-- Logger "Window"-->	  		
			<div class="row">
			<div class="col-sm-12"  id="logger" >				
				<ul class="nav nav-tabs" role="tablist" id="logger-tabs" >
		  			<li class="active"><a role="tab" data-toggle="tab" id="script-tab"> Script Debug</a> </li>
		  			<li><a role="tab" data-toggle="tab" id="chip-tab"> Chip Debug</a> </li>
		  			<li>  				  				
		  				<a role="tab" data-toggle="tab" id="console-tab"> 
		  					<span class="glyphicon glyphicon-tasks"></span> 
		  					Console
		  				</a> 
		  			</li>
				</ul>
				<div id="logger-container" class="no-top">	
					<table class="table  table-condensed  table-hover" ></table>		
				</div>
				<br>
				<div class="console" style="display:none">
					<div id="input">
						<div ></div>		
					</div>
				</div>
		 	</div>
	  		</div>	  				  		
			
	</div>
	</div>
	<br>		
 	<!-- Currnt operation "Window"-->	  		
	<div class="row">
	<div class="col-sm-12"  >				
		<div class="well well-sm" id="current-op">

		Current operation:
		<span> </span>			

		</div>
	</div>
	</div>  	
	

	
	
	</section>
	
	
	<section id="help" style="display: none;">
		Hi
	</section>
   
